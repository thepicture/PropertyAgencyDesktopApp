<UserControl x:Class="PropertyAgencyDesktopApp.Views.ClientView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PropertyAgencyDesktopApp.Views" 
             xmlns:controls="clr-namespace:PropertyAgencyDesktopApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="800">
    <Grid>
        <Button Content="ClientView"
                Style="{StaticResource CommonButton}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"></Button>
        <StackPanel>
            <controls:PopupControl Text="All is ok"></controls:PopupControl>
            <controls:PopupControl Text="Warning!"
                                   Type="Warning"></controls:PopupControl>
            <controls:PopupControl Text="Oh!!"
                                   Type="Success"></controls:PopupControl>
        </StackPanel>
    </Grid>
</UserControl>
